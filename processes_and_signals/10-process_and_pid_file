#!/usr/bin/env bash
# Write a Bash script that
touch /var/run/myscript.pid
pgrep -f "myscript.pid" > /var/run/myscript.pid
while true
do
  echo "To infinity and beyond"
  trap "echo 'I hate the kill command'; 
  rm -f /var/run/mycript.pid;
exit" SIGTERM
  trap "echo 'Y U no love me?!'" SIGINT
  trap "rm -f /var/run/myscript.pid;
exit" SIGQUIT
done
