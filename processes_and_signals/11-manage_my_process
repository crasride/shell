#!/usr/bin/env bash
#rograms that are detached from the terminal and running in the background are called daemons or processes, need to be managed. The general minimum set of instructions is: start, restart 
case $1 in
	start ) ./manage_my_process &
	echo "$$" > /var/run/my_process.pid
	echo "manage_my_process started"
	;;
        stop ) kill "$(pgrep -f /manage_my_process)"
	rm /var/run/my_process.pid
	echo "manage_my_process stopped"
	;;
        restart ) kill "$(pgrep -f /manage_my_process)"
	rm /var/run/my_process.pid
	./manage_my_process &
	echo "$$" > /var/run/my_process.pid
	echo "manage_my_process restarted"
	;;
        *) echo "Usage: manage_my_process {start|stop|restart}"
esac
